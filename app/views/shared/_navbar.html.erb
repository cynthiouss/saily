<div class="navbar-saily" id="navbarfixed">
  <div class="container leftright">
    <div class="row">
      <div class="col-xs-6 left">
        <!-- Logo -->
        <%= link_to root_path, class: "logo" do %>
          <%= image_tag "http://res.cloudinary.com/cynthiouss/image/upload/e_blue:36/v1459517992/Saily_logo.png" %>
        <% end %>
      </div>

      <div class="col-xs-6 right text-right">

          <!-- Different navigation if login or not -->
        <% if user_signed_in? %>

          <!-- Notification -->

            <div class="badge-container">
              <i class="fa fa-envelope-o"></i>
              <div class="badge badge-blue">3</div>
            </div>

          <!-- Profile picture and dropdown -->
            <div class="dropdown">
              <%= image_tag "http://placehold.it/30x30", class: "avatar dropdown-toggle", id: "navbar-wagon-menu", "data-toggle" => "dropdown" %>
              <ul class="dropdown-menu dropdown-menu-right navbar-wagon-dropdown-menu">
                <li>
                  <%= link_to "#" do %>
                    <i class="fa fa-user"></i> <%= t ".profile", default: "Profile" %>
                  <% end %>
                </li>
                <li>
                  <%= link_to "#" do %>
                    <i class="fa fa-home"></i>  <%= t ".profile", default: "Home" %>
                  <% end %>
                </li>
                <li>
                  <%= link_to destroy_user_session_path, method: :delete do %>
                    <i class="fa fa-sign-out"></i>  <%= t ".sign_out", default: "Log out" %>
                  <% end %>
                </li>
              </ul>
            </div>

        <% else %>

        <%= link_to "How Saily works", './about', class: 'navbar-saily-item navbar-saily-button btn' %>
        <!-- Sign in button -->

        <%= link_to "Sign in", new_user_session_path, class: 'navbar-saily-item navbar-saily-button btn' %>

        <!-- Sign up -->

        <%= link_to "Sign up", new_user_registration_path, class: 'navbar-saily-item navbar-saily-button btn', id: 'signupbtn' %>

        <% end %>

      </div>
    </div>
  </div>
</div>

